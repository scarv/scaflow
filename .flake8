[flake8]
extend-ignore = E203, E266, E501, F401, F403
max-line-length = 80
max-complexity = 18
select = B,C,E,F,W,T4,B9
mypy_config = mypy.ini
per-file-ignores =
    __init__.py:F401
exclude =
    .git
    __pycache__
    setup.py
    build
    dist
    releases
    .venv
    .tox
    .mypy_cache
    .pytest_cache
    .vscode
    .github
    scaflow/editor/ui_models/
